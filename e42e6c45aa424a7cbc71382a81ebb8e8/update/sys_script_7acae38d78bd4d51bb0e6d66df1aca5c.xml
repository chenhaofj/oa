    <script>(function executeRule(current, previous /*null when async*/) {
  var approveId = current.getValue('quote');
  var gr = new GlideRecord('x_yunji_oa_t_cost');
	gr.addQuery('quote',approveId);
  gr.query();
  var sumCost = 0;
  while(gr.hasNext()){
  	gr.next();
   	sumCost += gr.getValue('cost');
  }
  var grca = new GlideRecord('x_yunji_oa_t_trip_cost_approve');
	grca.addQuery('sys_id',approveId);
  grca.query();
  if(grca.hasNext()){
  	grca.next();
    grca.setValue('amount',sumCost);
  }
  grca.update();
})(current, previous);</script>
